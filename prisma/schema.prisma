generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model StatusType {
  id         Int          @id @default(autoincrement())
  type       String       @unique
  characters Character[]  @relation("CharacterStatus")
  episodes   Episode[]    @relation("EpisodeStatus")
}

model Character {
  id           Int         @id @default(autoincrement())
  name         String
  status       String
  statusType   StatusType  @relation("CharacterStatus", fields: [statusTypeId], references: [id])
  statusTypeId Int
  species      String
  type         String
  gender       String
  origin       String
  location     String
  image        String
}

model Episode {
  id           Int         @id @default(autoincrement())
  name         String
  air_date     String
  episode      String
  statusType   StatusType  @relation("EpisodeStatus", fields: [statusTypeId], references: [id])
  statusTypeId Int
  url          String
  created      DateTime
}
